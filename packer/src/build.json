{
  "builders": [
    {
      "boot_command": [
        "<tab> cmdline ks={{user `ks_repo`}}/{{user `ks_file`}}-{{user `version`}}.cfg ",
        "{{user `ip_string`}} ",
        "{{user `custom_boot_options`}} ",
        "IP_ADDR={{user `_ip`}} ",
        "NM_ADDR={{user `_nm`}} ",
        "GW_ADDR={{user `_gw`}} ",
        "DNS_ADDR={{user `_dns`}} ",
        "<enter><wait>"
      ],
      "boot_wait": "20s",
      "disk_size": 20480,
      "disk_type_id": "thin",
      "format": "ovf",
      "headless": false,
      "iso_checksum": "{{user `iso_checksum`}}",
      "iso_checksum_type": "md5",
      "iso_url": "{{user `iso_url`}}",
      "output_directory": "build-image/{{user `build_prefix`}}-{{user `version`}}-vmware-iso",
      "remote_datastore": "{{ user `remote_datastore`}}",
      "remote_host": "{{ user `remote_host`}}",
      "remote_username": "{{ user `remote_username`}}",
      "remote_password": "{{ user `remote_password`}}",
      "remote_type": "esx5",
      "shutdown_command": "shutdown -P now",
      "ssh_password": "{{user `ssh_password`}}",
      "ssh_port": 22,
      "ssh_username": "{{user `ssh_username`}}",
      "ssh_timeout": "30m",
      "type": "vmware-iso",
      "vnc_port_min": "5988",
      "vnc_port_max": "5988",
      "vnc_disable_password": true,
      "vmx_data": {
          "virtualHW.version": "{{user `vcenter_vm_hw_version`}}",
          "memsize": "4096",
          "numvcpus": "4",
          "ethernet0.virtualDev": "vmxnet3",
          "ethernet0.networkName": "{{user `vcenter_nic_vlan`}}",
          "ethernet0.addressType": "generated",
          "guestOS": "{{user `guestos`}}",
          "vcpu.hotadd": "TRUE",
          "mem.hotadd": "TRUE",
          "scsi0.virtualDev": "pvscsi",
          "tools.syncTime": "FALSE"
      },
      "vm_name": "{{user `build_prefix`}}-{{user `version`}}-{{user `branch_name`}}-{{user `commit_id`}}",
      "ovftool_options": [
        "--exportFlags=extraconfig",
        "--allowExtraConfig",
        "--X:connectionReconnectCount=5",
        "--X:connectionRetryCount=5",
        "--X:connectionReconnectDelay=5"
      ]
    }
  ],
  "provisioners": [
    {
      "only": ["vmware-iso"],
      "destination": "/tmp",
      "source": "scripts",
      "type": "file"
    },
    {
      "environment_vars": [
        "HOME_DIR=/root",
        "http_proxy={{user `http_proxy`}}",
        "https_proxy={{user `https_proxy`}}",
        "no_proxy={{user `no_proxy`}}"
      ],
      "scripts": [
        "scripts/post_processing.sh"
      ],
      "type": "shell"
    },
    {
      "only": ["vmware-iso"],
      "destination": "/etc/cloud/cloud.cfg",
      "source": "files/cloud/{{user `cloud_file`}}",
      "type": "file"
    }
  ],
  "variables": {
    "iso_checksum": null,
    "iso_url": null,
    "version": null,
    "ks_file": null,
    "ifname": null,
    "build_prefix": null,
    "cloud_file": null,
    "custom_boot_options": null,
    "build_number": "{{env `BUILD_NUMBER`}}",
    "build_version": "{{env `BUILD_VERSION`}}",
    "ip_string": "{{env `IP_STRING`}}",
    "ks_repo": "http://artifactory.yoox.net/artifactory/ynap-infrastructure-packages/kickstart",
    "dc_site": "{{env `DC_SITE`}}",
    "ssh_password": "{{env `IMAGE_ROOT_PWD`}}",
    "ssh_username": "root",
    "remote_datastore": "{{env `ESXI_DATASTORE`}}",
    "remote_host": "{{env `ESXI_HOST`}}",
    "remote_username": "{{env `ESXI_USER`}}",
    "remote_password": "{{env `ESXI_PWD`}}",
    "branch_name": "{{env `BRANCH_NAME`}}",
    "commit_id": "{{env `COMMIT_ID`}}",
    "vcenter_folder": "{{env `VCENTER_FOLDER`}}",
    "vcenter_pwd": "{{env `VCENTER_PWD`}}",
    "vcenter_user": "{{env `VCENTER_USER`}}",
    "vcenter_nic_vlan": "{{env `VCENTER_NIC_VLAN`}}",
    "vcenter_vm_hw_version": "{{env `VCENTER_VM_HW_VERSION`}}",
    "http_port": "{{env `HTTP_PORT`}}",
    "http_ip": "{{env `HTTP_IP`}}",
    "_ip" : "{{env `CLIENT_IP`}}",
    "_nm" : "{{env `NETMASK`}}",
    "_gw" : "{{env `GATEWAY_IP`}}",
    "_dns" : "{{env `DNS2`}}"
  }
}
